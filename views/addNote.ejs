<!DOCTYPE html>
<!-- Note the user is already authenticated when they reach this page. -->
<html lang="en">

<head>
    <% include ./partials/head %>
</head>
<body class="container">

    <header>
        <% include ./partials/header %>
    </header>

    <main>
	  <h2> <%= title %> </h2>
        <div class="jumbotron">
		<form method="post" action="/note">
		<div class="form-group">
			<label for="date">Date:</label>
			<input type="text" class="form-control" id="date" name="date" placeholder="Date" required="true" value="<%= notetime %>">
		</div>
		<div class="form-group">
			<label for="email">Email address:</label>
			<input type="email" class="form-control" id="email" name="email" placeholder="email address" value="<%= user.email %>" required="true">
		</div>
		<div class="form-group">
			<label for="topic">Topic:</label>
			<input type="text" class="form-control" id="topic" name="topic" placeholder="Topic" required="true">
		</div>
		<div class="form-group">
			<label for="comment">Details:</label>
			<textarea class="form-control" rows="5" id="details" name="content"></textarea>
		</div>
		<div class="checkbox">
			<label><input type="checkbox"> Remember me</label>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
		</form> 
		</div>
    </main>

    <footer>
        <% include partials/footer %>
    </footer>
    
</body>
</html>